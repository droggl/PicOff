<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="VS"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvStats"
        app:layout_constraintEnd_toStartOf="@+id/layoutStatsFriendAvatar"
        app:layout_constraintStart_toEndOf="@+id/layoutStatsOwnAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/layoutStatsFriendAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/avatarCornerRadius"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="64dp">

            <ImageView
                android:id="@+id/ivStatsFriendAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@tools:sample/avatars[10]" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvStatsFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Challenger"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutStatsOwnAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/avatarCornerRadius"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="64dp">

            <ImageView
                android:id="@+id/ivStatsOwnAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@tools:sample/avatars[9]" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvStatsOwnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Challenger"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="15 : 10"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutStatsOwnAvatar" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStats" />

</androidx.constraintlayout.widget.ConstraintLayout>